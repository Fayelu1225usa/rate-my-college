<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/universities/<%= university_id%>/comments/<%= comment._id%>?_method=PUT" method="POST"> 
            <div class="form-group">
                <label for="comment">Comment</label>
                <input id="rate" type="text" value="<%= comment.rating%>" class="rating rating-loading form-control" data-size="sm" title="" showClear=false name="comment[rating]" >
                <textarea id="comment" class="form-control" type="textarea" name="comment[text]" placeholder="text" style="resize: none" rows="4" cols="40"> <%= comment.text%> </textarea>
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/universities">Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>

<script> 

    $('.rating').rating({
        'showCaption': false,
        'showClear': false,        
    });

</script>