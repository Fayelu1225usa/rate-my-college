<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Edit <%= university.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/universities/<%= university._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" name="university[name]" value="<%= university.name %>">
            </div>
            <div class="form-group">
                <label for="year">Established Time</label>
                <input id="year" class="form-control" type="number" name="university[year]" value="<%= university.year%>" min="0" step="1">
            </div>
                      
            <div class="form-group">
                <label for="image">Image</label>
                <input id="image" class="form-control" type="text" name="university[image]" value="<%= university.image %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" class="form-control" type="text" name="university[description]" value="<%= university.description %>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= university.location %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/universities">Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>